package main

import "fmt"

/*
Os Zeros:
- int: 0
- float: 0.0
- boolean: false
- string: ""
- pointers, functions, interfaces, slices, channles, maps: nil
Use := sempre que possivel
Use var para variaveis de escopo global

*/

//*Repare se eu não colocar valor nessas variaveis ela vai contar o valor por padrão (0, false e "")
//*O interessante é que ela não traz um valor nullo !!
var a int
var b float64
var c string
var d bool

func main() {
	fmt.Printf("%v, %T\n", a, a)
	fmt.Printf("%v, %T\n", b, b)
	fmt.Printf("%v, %T\n", c, c)
	fmt.Printf("%v, %T\n", d, d)
}
